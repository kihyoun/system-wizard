FROM node:13.12.0-alpine as builder

# Clone Wizard Repository
WORKDIR /
RUN apk update
RUN apk add git
RUN git clone https://github.com/kihyoun/system-wizard.git /app
WORKDIR /app
# Checkout
RUN git checkout 5ced7e41aaaa66fdd1caba00603896ec5bfddd5e -b release
# add `/app/node_modules/.bin` to $PATH
ENV PATH /app/node_modules/.bin:$PATH

# install app dependencies
RUN npm install -f --silent
RUN npm ci -f --silent
# create production build
RUN npm run build

# production environment
FROM nginx:stable-alpine
COPY --from=builder /app/build /usr/share/nginx/html
RUN cp /app/nginx/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]